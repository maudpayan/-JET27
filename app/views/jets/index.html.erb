<div class="container-index">
  <div class="row" style="background-color: #F4F4F4">

    <div class="col-xs-12 col-sm-8" style="padding-left: 40px">
      <ul class="list-inline">
        <li><h3 style='padding-left: 15px;'>Try the jet of your dream </h3></li>
        <!-- <li><img src="airplane_index.png" alt=""></li> -->
        <li>
          <%= image_tag 'airplane_index.png', class: 'icone' %>
        </li>
      </ul>

      <div class="cards-container">
        <div class="row">
          <% @jets.each do |jet|%>
            <%= link_to jet_path(@search.merge(id: jet.id)) do %>
              <div class="col-xs-12 col-sm-6" style="margin: 10px, 10px">
                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path jet.photo, height: 300, width: 400, crop: :fill %>')">
                  <div class="card-city"><%= jet.address %></div>
                  <div class="card-description">
                    <p><%= jet.name %></p>
                    <ul class= "card-settings list-inline" >
                      <li><%= "#{jet.price_day} â‚¬"%></li>
                      <li><%= "#{jet.pax} pers" %></li>
                    </ul>
                  </div>
                  <%= cl_image_tag jet.user.photo, class: 'card-user' %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>



    <div class="col-xs-12 col-sm-4" style="padding-left: 0px">

      <br>
      <div class="map-container">
        <div id="map" style="width: 100%; height: 600px; "data-markers="<%= @markers.to_json %> "data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
      <br>

    </div>


  </div>
</div>



