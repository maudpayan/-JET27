<div class="page_new_jet">
    <div class="formulaire">
      <h1 style='text-align: center'>Rent your jet</h1>
      <%= simple_form_for @jet do |f| %>
        <%= f.input :name, label: 'Jet model' %>
        <%= f.input :description %>
        <%= f.input :price_day, label: 'Price per day (â‚¬)', input_html: { min: '0'} %>
        <%= f.input :pax, label: 'Capacity max', input_html: { min: '1'} %>
        <%= f.input :address %>
        <%= f.input :zipcode %>
        <%= f.input :city %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="button-center-form" style='text-align: center; margin-bottom: 10px;'>
          <%= f.button :submit, class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
    <div class="photo_right">
      <%=image_tag("blue-sky-750144-unsplash.jpg", id: "image_form")%>
  </div>
</div>
